{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "if echo \"$ARGUMENTS\" | grep -q '\"command\".*git push'; then ./test.sh || exit 1; fi",
            "timeout": 600
          }
        ]
      }
    ]
  }
}
